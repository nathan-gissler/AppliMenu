<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textMyRecipeBook"
        style="@style/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Mon carnet"
        app:layout_constraintBottom_toTopOf="@id/favoriteRecipes"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <RelativeLayout
        android:id="@+id/favoriteRecipes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textMyRecipeBook">

        <LinearLayout
            android:id="@+id/titleFavoriteRecipes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/textFavoriteRecipes"
                style="@style/SubTitleButtonBurntSienna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mes recettes favorites"></TextView>

            <ImageView
                android:id="@+id/heartFavoriteRecipes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/heart"></ImageView>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerFavoriteRecipes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleFavoriteRecipes"></androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/personalRecipes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/favoriteRecipes">

        <TextView
            android:id="@+id/textPersonalRecipes"
            style="@style/SubTitleButtonBurntSienna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mes recettes personnelles"></TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerPersonalRecipes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textPersonalRecipes"></androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/buttonAddRecipe"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recyclerPersonalRecipes"
            android:text="Ajouter une recette personnelle"></Button>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>